@model IList<string>

@{
    ViewBag.Title = "Array bind";
}

<h2>Names</h2>
@if (Model.Count == 0)
{
    using (Html.BeginForm())
    {
        for (int i = 0; i < 3; i++)
        {
            <div><label>@(i + 1)</label>@Html.TextBox("names")</div>
        }
        <div><input type="submit" value="Submit" /></div>
    }
}
else
{
    foreach (var name in Model)
    {
        <p>@name</p>
    }
    @Html.ActionLink("Back", "Names")
}
