@using HelperMethods.Models
@model Person

@{
    ViewBag.Title = "Template Helper Methods";
    Html.EnableUnobtrusiveJavaScript(false);
}

<h2>Create Person:</h2>
@using (Html.BeginForm())
{
    @Html.LabelForModel()
    <div class="column">
        @Html.EditorForModel()
    </div>
    <div class="column">
        @Html.EditorFor(m=> m.Address)
    </div>
    <input type="submit" value="Submit" />
}

